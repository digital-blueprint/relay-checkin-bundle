{
    "name": "dbp/relay-checkin-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "api-platform/core": "^3.2",
        "dbp/relay-base-person-bundle": "^0.2.33",
        "dbp/relay-core-bundle": "^0.1.186",
        "guzzlehttp/guzzle": "^7.0",
        "kevinrob/guzzle-cache-middleware": "^3.3 || ^4.0  || ^5.0",
        "league/uri": "^6.4 || ^7.4",
        "symfony/framework-bundle": "^7.0",
        "symfony/lock": "^7.0",
        "symfony/messenger": "^7.0",
        "league/uri-interfaces": "^2.3.0 || ^7.4.0",
        "psr/http-message": "^1.0 || ^2.0",
        "symfony/http-kernel": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/http-foundation": "^7.0",
        "psr/log": "^1.1.4 || ^2.0.0 || ^3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpstan/phpstan-symfony": "^1.3.7",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^7.0",
        "vimeo/psalm": "^5.22.2",
        "symfony/monolog-bridge": "^v7.0"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\CheckinBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\CheckinBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/phpunit --atleast-version 0",
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ]
    }
}
